%main.single-main
  %section.l-single-container
    %h2.l-single-head.registration
      新規会員登録
    .l-single-inner.registration-form
      .l-single-content
        .button-default.red
          = link_to profile_path,class:"red" do
            -# = fa_icon 'envelope', class:"m-icon"
            %p メールアドレスで登録する
        .button-default.blue
          = link_to user_facebook_omniauth_authorize_path, class: "blue", method: :post do
            -# = fa_icon 'facebook-square', class:"f-icon"
            %p Facebookで登録する
        .button-default.white
          = link_to user_google_oauth2_omniauth_authorize_path, class:"g-link", method: :post do
            -# = fa_icon 'google', class:"g-icon"
            %p Googleで登録する

%h2 Sign up
-# = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
